@model PostSystem.Website.ViewModels.DeliveryViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>DeliveryViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mail_Id" class="control-label"></label>
                @Html.DropDownListFor(delivery => delivery.Mail_Id, ViewBag.Mails as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Mail_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="From_Office_Id" class="control-label"></label>
                @Html.DropDownListFor(delivery => delivery.From_Office_Id, ViewBag.PostOffices as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="From_Office_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="To_Office_Id" class="control-label"></label>
                @Html.DropDownListFor(delivery => delivery.To_Office_Id, ViewBag.PostOffices as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="To_Office_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tax" class="control-label"></label>
                <input asp-for="Tax" class="form-control" />
                <span asp-validation-for="Tax" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Express_Delivery" /> @Html.DisplayNameFor(model => model.Express_Delivery)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label" hidden></label>
                <input asp-for="Id" class="form-control" hidden/>
                <span asp-validation-for="Id" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <label asp-for="Created_On" class="control-label" hidden></label>
                <input asp-for="Created_On" class="form-control" hidden/>
                <span asp-validation-for="Created_On" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <label asp-for="Updated_On" class="control-label" hidden></label>
                <input asp-for="Updated_On" class="form-control" hidden/>
                <span asp-validation-for="Updated_On" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
